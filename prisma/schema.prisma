generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Story {
  id          Int      @id @default(autoincrement())
  title       String
  currentScene String
  sceneImage  String
  task        Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  scenes      Scene[]
  playerStats PlayerStats?
}

model Scene {
  id          Int      @id @default(autoincrement())
  storyId     Int
  description Json
  options     Json
  story       Story    @relation(fields: [storyId], references: [id])
}

model PlayerStats {
  id          Int      @id @default(autoincrement())
  storyId     Int      @unique
  health      Int
  energy      Int
  inspiration Int
  story       Story    @relation(fields: [storyId], references: [id])
}
